<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <description
  >A simple Hello World component that displays a customizable greeting message</description>
    <isExposed>true</isExposed>
    <masterLabel>Hello World</masterLabel>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig
      targets="lightning__AppPage,lightning__HomePage,lightning__RecordPage"
    >
            <property
        name="message"
        type="String"
        default="Hello World!"
        label="Display Message"
        description="The message to display in the component"
        placeholder="Enter your greeting message"
      />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
